!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Form Elements
    %link{:href => "stylesheets/dashboard/style.css", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "/javascripts/jquery.js", :type => "text/javascript"}
    %script{:src => "/javascripts/dashboard/js.js", :type => "text/javascript"}
  %body
    .wrapper
      .outline
        .header
          .top
            %h1.logo
              %img{:alt => "Company", :src => "/images/dashboard/logo.png"}/
            .property_selector
              %span Select a View
              .menu
                %ul
                  %li
                    %a{:href => "view1.html"} View 1
                  %li
                    %a{:href => "view2.html"} View 2
                  %li
                    %a{:href => "view3.html"} View 3
                  %li
                    %a{:href => "view4.html"} View 4
                  %li
                    %a{:href => "people.html"} People View
                  %li
                    %a{:href => "view-SubNav.html"} View with sub nav
                  %li
                    %a{:href => "single.html"} Single Page
                  %li
                    %a{:href => "formelements.html"} Form Elements
                  %li
                    %a{:href => "buttons.html"} Buttons
            / #progerty_selector end
            .account_box
              Logged in as UserName
              %a{:href => "profile.html"}
                %span My Profile
              %a{:href => "login.html"}
                %span Logout
              %a{:href => "#"}
                %span Help
          / div.top end
          .navbar
            %h1 Nav Bar Buttons
            %ul
              %li.current
                %a{:href => ""}
                  %span
                    %img{:alt => "icon", :src => "/images/dashboard/icon-home.gif"}>/
                    Button 1
              %li
                %a{:href => ""}
                  %span
                    %img{:alt => "icon", :src => "/images/dashboard/icon-ticket.gif"}>/
                    Button 2
              %li
                %a{:href => ""}
                  %span
                    %img{:alt => "icon", :src => "/images/dashboard/icon-people.gif"}>/
                    Button 3
              %li.last
                %a{:href => ""}
                  %span
                    %img{:alt => "icon", :src => "/images/dashboard/icon-settings.gif"}>/
                    Button 4
        / div.header end
        .container
          .sidebar
            .search-box
              %form{:action => ""}
                .input-box
                  %input.search-input{:name => "", :type => "text"}/
                %input.searchButton{:name => "", :type => "submit", :value => " "}/
          .main
            .page-content
              #flash
                .flash
                  .notice Success Message!
                  .fourcorners
                    .corner-1
                      %img{:alt => "", :src => "/images/dashboard/corner-grn-1.gif"}/
                    .corner-2
                      %img{:alt => "", :src => "/images/dashboard/corner-grn-2.gif"}/
                    .corner-3
                      %img{:alt => "", :src => "/images/dashboard/corner-grn-3.gif"}/
                    .corner-4
                      %img{:alt => "", :src => "/images/dashboard/corner-grn-4.gif"}/
              .error-overview
                One or more errors prevented the form from being submitted. Please
                see the errors below and correct any problems.
              .form-create
                %h3.title Form Elements
                %form#edit_person.edit_person{:action => "#", :method => "post"}
                  %div{:style => "margin:0;padding:0"}
                  %h3.title Title
                  %ul
                    %li
                      %label{:for => "person_first_name"} Input Field
                      .input-field
                        %input#person_first_name.input-text{:name => "person[first_name]", :size => "30", :type => "text", :value => ""}/
                  %h3.title Title
                  %ul
                    %li
                      .fieldWithErrors
                        %label{:for => "ticket_title"} Field With Errors
                      .input-field
                        .fieldWithErrors
                          %input#ticket_title.input-text{:name => "ticket[title]", :size => "30", :type => "text", :value => ""}/
                        .error-field
                          .error-message
                            .formError Field can't be blank
                    %li
                      %label{:for => "person_im_name"} Select
                      %select#person_im_service{:name => "person[im_service]"}
                        %option{:selected => "selected", :value => "AIM"} AIM
                        %option{:value => "GTalk"} GTalk
                        %option{:value => "MSN"} MSN
                  %ul
                    %li
                      %label{:for => "ticket_message"} Textarea
                      .input-field
                        %textarea#ticket_message.input-text{:cols => "40", :name => "ticket[message]", :rows => "5"}
                    %li
                      %label{:for => "ticket_image"} Attach Image
                      %p
                        %img{:alt => "attach", :src => "/images/dashboard/icon-attach.gif"}/
                        %input#ticket_image{:name => "ticket[image]", :size => "30", :type => "file"}/
                    %li
                      %h1 H1
                      %h2 H2
                      %h3 H3
                      %h4 H4
                      %h5 H5
                  .submit
                    %input.saveButton{:name => "", :type => "submit", :value => " "}/
                    or
                    %a{:href => "dashboard.html"}
                      %input.cancel{:name => "", :type => "button", :value => "Cancel"}/
    / div.wrapper end, div.footer start
    .footer
      .footerlogo
        %img{:alt => "Company Name", :src => "/images/dashboard/logo.png"}/
      #footer-links
        %ul
          %li
            %a{:href => "#"} Help &amp; Support
          %li
            %a{:href => "#"} Link
          %li
            %a{:href => "#"} Forums
          %li
            %a{:href => "#"} Privacy Policy
          %li
            %a{:href => "#"} Terms of Use
        %p
          Company Name is a Service of
          %a{:href => "#"} Company Name
    / div.footer end
