      %h1 Twitter
    %div(data-role="content")
      %h3 Twitter

      = form_for @twitter_status, :url => update_twitter_status_dashboard_short_urls_path do |f|
        %div(data-role="fieldcontain")
          = f.label :message
          = f.text_area :message, :size => "90x5"

        %button(type="submit" data-theme="a") Twitter !

